<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1.00"
              android:background="@drawable/gradient_background"
              tools:context="com.example.raghab.cigbuild1.SmokeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".02">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/activity_smoke_display_info"
            android:text="Day 1"
            android:textColor="@color/darkSlate"
            android:textSize="20sp"
            android:gravity="center_horizontal|center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".80">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/activity_smoke_display_info"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_smoke_textView"
                android:text="This too will pass"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_weight=".01">
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="Craving"
            android:id="@+id/activity_smoke_craveButton"
            android:layout_below="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="Smoke + 1"
            android:id="@+id/activity_smoke_smokePlusButton"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".18"
        android:background="@color/darkSlate"
        android:orientation="horizontal"
        android:weightSum="0.90">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/displayMoney_textView_activitySmoke"
            android:text="250.00"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_weight=".30"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/displayNoOfCig_textView_activitySmoke"
            android:layout_weight="0.30"
            android:text="12 pcs"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20sp"
            android:textColor="@color/White"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/displayTime_textView_activitySmoke"
            android:layout_weight="0.30"
            android:text="12:52:21 pm"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20sp"
            android:textColor="@color/White"/>
    </LinearLayout>
</LinearLayout>
