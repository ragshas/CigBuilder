<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1.20"
                tools:context="com.example.raghab.cigbuild1.SmokeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".05">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/activity_smoke_display_info"
        android:background="@color/darkSlate"
        android:text="Time since last smoked is 05:22:04"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".70">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/activity_smoke_display_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/paleGoldenRod"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_smoke_textView"
            android:text="This too will pass"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        </ScrollView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:layout_weight=".25">
    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Craving"
        android:id="@+id/activity_smoke_craveButton"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Smoke + 1"
        android:id="@+id/activity_smoke_smokePlusButton"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight=".20"
    android:background="@color/darkSlate">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$          22         5:20:12"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/White"/>
    </LinearLayout>
</LinearLayout>
